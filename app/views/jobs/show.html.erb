<div id="jobs">
	<div class="job">
		<h2><%= @job.title %></h2><br>
		<p><%= @job.description %></p><br>
		<p><%= @job.company %></p><br>
		<p><%= @job.url %></p><br>
		<%= link_to "Apply for job", @job.url, class: "button btn btn-default" %><br>
	</div>
</div>
<br>
<div id="link">
	<%= link_to 'Edit', edit_job_path, class: "btn btn-sm btn-default"  %>
	<%= link_to 'Back', root_path, class: "btn btn-sm btn-default"  %>
	<%= link_to "Delete", job_path(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-default" %>
</div>